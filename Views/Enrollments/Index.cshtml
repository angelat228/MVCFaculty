@model IEnumerable<MVCFaculty.Models.Enrollment>

@{
    ViewData["Title"] = "Enrollments";
}

<h1>Enrollments</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Semester)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FinishDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Courses" asp-action="Details" asp-route-id="@item.CourseID">
                        @Html.DisplayFor(modelItem => item.Course.Title)
                    </a>
                </td>
                <td>
                    <a asp-controller="Students" asp-action="Details" asp-route-id="@item.StudentID">
                        @Html.DisplayFor(modelItem => item.Student.FullName)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Semester)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Grade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FinishDate)
                </td>
                <td>
                    @if (item.FinishDate == null)
                    {
                        <a asp-action="Edit" asp-route-id="@item.EnrollmentID">Unenroll</a>
                        <label>|</label>
                    }
                    <a asp-action="Details" asp-route-id="@item.EnrollmentID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.EnrollmentID">Delete</a>
</tr>
        }
    </tbody>
</table>


<p>
    <a asp-controller="Courses" asp-action="Index">Back to Courses</a>
</p>